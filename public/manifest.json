{
  "manifest_version": 3,
  "name": "Autonomous AI Assistant for monday.com",
  "version": "2.0",
  "description": "An intelligent gateway to monday.com that provides contextual awareness and task creation.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.monday.com/",
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data:;"
  }
}